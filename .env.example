# Database (PostgreSQL via Replit or Neon)
DATABASE_URL=postgresql://USER:PASS@HOST:5432/cryptoalert

# Session secret (generate a random string)
SESSION_SECRET=your-session-secret-here

# CoinMarketCap API (required for price data)
# Get free API key at: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# CryptoPanic API (required for news)
# Get free token at: https://cryptopanic.com/developers/api/
CRYPTOPANIC_TOKEN=your_cryptopanic_token_here

# Web Push (optional - for browser notifications)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:you@example.com

# Server Port (optional - defaults to 5000)
PORT=5000
